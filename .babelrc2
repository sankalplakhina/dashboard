{
    "presets": [
        "es2015-loose",
        "react"
    ],
    "env": {
        "production": {
            "plugins": [
                // do not remove prop types in dev so we get warnings
                "transform-react-remove-prop-types"
            ]
        }
    },
    "plugins": [
        "@saxo/babel-plugin-localize-replace",
        ["transform-runtime", {
            "polyfill": false   // on by default, but we provide our own polyfills for Promise etc.
        }],
        "transform-react-constant-elements",
        // Disable inline elements as requires global symbol polyfill
        // "transform-react-inline-elements",
        "transform-react-pure-class-to-function"
    ]
}